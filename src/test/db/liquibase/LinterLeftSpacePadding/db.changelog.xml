	<changeSet author="mvallet" id="20152812-1" objectQuotingStrategy="QUOTE_ALL_OBJECTS">

		<createTable  tableName="test_nvarchar" remarks="table for lint LinterLeftSpacePaddingTest">
			<column name="id" 				type="int" 			remarks="primary key"/>
			<column name="nvarchar_data" 	type="nvarchar" 			remarks="column with non left padding"/>
			<column name="nvarchar_left_padding" type="nvarchar" 			remarks="column with left padding"/>
		</createTable>
		<addPrimaryKey columnNames="id"
					   constraintName="pk_nvarchar_test"
					   schemaName="public"
					   tableName="test_nvarchar"/>
		<sql><![CDATA[insert into test_nvarchar(id, nvarchar_data, nvarchar_left_padding) values (1, 'test', ' test')]]></sql>

